<Window x:Class="DapperTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DapperTest"
        mc:Ignorable="d"
        Title="Dapper Test Program"
        SizeToContent="WidthAndHeight">
    <Grid Height="300" Width="600" Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="Query Options:" Margin="0,0,0,2">
            <UniformGrid Grid.Row="0" Margin="0,4" >
                <Button Content="Get All Customers" HorizontalAlignment="Left"/>
            </UniformGrid>
        </GroupBox>

        <GroupBox Grid.Row="1" Header="Query Results:" Margin="0,2,0,0">
            <TextBox />
        </GroupBox>
    </Grid>
</Window>
